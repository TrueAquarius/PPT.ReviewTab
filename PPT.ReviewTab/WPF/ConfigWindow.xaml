<!-- MyCustomWindow.xaml -->
<Window x:Class="PPT.ReviewTab.WPF.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Tab Configuration" Height="300" Width="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="MainGrid" Orientation="Vertical">
            <TextBlock x:Name="TitleTxt" Text="Configuration" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0, 5, 0, 10"/>
        </StackPanel>
    </ScrollViewer>
</Window>
