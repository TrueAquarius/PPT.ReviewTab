<UserControl x:Class="PPT.ReviewTab.WPF.Controls.ColorSchemeCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPT.ReviewTab.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Content="Back:" Margin="0,2,2,2" />
        <local:ColorCtrl x:Name="BackgroundColorCtrl" />
        <Label Content="Text:" Margin="10,2,2,2" />
        <local:ColorCtrl x:Name="TextColorCtrl" />
        <Label Content="Border:" Margin="10,2,2,2" />
        <local:ColorCtrl x:Name="BorderColorCtrl" />
    </StackPanel>
</UserControl>
