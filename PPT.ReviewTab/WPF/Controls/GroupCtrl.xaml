<UserControl x:Class="PPT.ReviewTab.WPF.Controls.GroupCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPT.ReviewTab.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="MainGrid" Orientation="Vertical" HorizontalAlignment="Left" Background="White" Margin="0, 0, 0, 20">
        <TextBlock x:Name="GroupLabel"  Text="Group" FontSize="20" Margin="10, 20, 10, 5" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0" >
            <Label x:Name="NameLabel" Width="100" Margin="0">Group Name:</Label>
            <TextBox x:Name="NameField" Text="---" Width="200" VerticalAlignment="Center" TextChanged="OnNameChanged"/>
            <Button x:Name="RemoveBtn" Content="remove" Margin="0" Click="OnRemoveBtnClicked" />
        </StackPanel>
        
    </StackPanel>
</UserControl>
