<UserControl x:Class="PPT.ReviewTab.WPF.Controls.ItemCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPT.ReviewTab.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="MainGrid" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,10,0" >
            <Label Width="90" Margin="0">Item:</Label>
            <TextBox x:Name="NameField" Text="---" Width="200" VerticalAlignment="Center" TextChanged="OnNameChanged"/>
            <Button x:Name="GoBtn" Content="Go" Margin="2" Click="OnGoBtnClicked" />
        </StackPanel>
        <local:ColorSchemeCtrl x:Name="ColorScheme" Margin="110, 0, 10, 0" />
    </StackPanel>
</UserControl>
